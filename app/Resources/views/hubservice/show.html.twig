{% extends 'base.html.twig' %}

{% block body %}
    <h1>HubService</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hubService.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hubService.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ hubService.url }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hubservice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hubservice_edit', { 'id': hubService.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
